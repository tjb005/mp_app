<% provide(:title, "Sign in") %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-3 col-xs-offset-4">
    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <br></br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br></br>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>